<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
  <div class='text-center mb-4'>
    <h1 class='h3 mb-3 font-weight-normal'>Forgot your password?</h1>
  </div>

  <%= devise_error_messages! %>

  <div class='form-label-group'>
    <%= f.email_field :email, autofocus: true, required: true, autocomplete: 'email', placeholder: 'Email address', class: 'form-control' %>
    <%= f.label :email, 'Email address' %>
  </div>

  <%= f.submit 'Send me reset password instructions', class: 'btn btn-lg btn-primary btn-block' %>

  <%= render 'devise/shared/links' %>
<% end %>

