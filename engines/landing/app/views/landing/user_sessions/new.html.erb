<%= form_for(resource, as: resource_name, url: create_new_session_path, html: { class: 'form-signin' }) do |f| %>
  <div class='text-center mb-4'>
    <h1 class='h3 mb-3 font-weight-normal'>Sign in</h1>
  </div>

  <div class='form-label-group'>
    <%= f.email_field :email, autofocus: true, required: true, autocomplete: 'email', placeholder: 'Email address', class: 'form-control' %>
    <%= f.label :email, 'Email address' %>
  </div>

  <div class='form-label-group'>
    <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'Password', class: 'form-control' %>
    <%= f.label :password, 'Password' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class='checkbox mb-3'>
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %> Remember me
      <% end %>
    </div>
  <% end -%>

  <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>

  <%= render 'landing/shared/devise_links' %>
<% end %>
