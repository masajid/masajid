<div class='container how-to-use'>
  <h1><%= t('landing.how_to_use.headline') %></h1>

  <div class='row'>
    <div class='col-md-3 step'>
      <%= image_tag 'landing/how-to-use-step-1.png', width: 140, height: 140 %>
