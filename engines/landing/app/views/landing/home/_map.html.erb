<div class='map'>
  <h1 class='header'>
    <%= t('landing.map.headline') %>
  </h1>

  <div id='map'></div>
</div>

<script type='text/javascript'>
  mapboxgl.accessToken = '<%= ENV['MAPBOX_ACCESS_TOKEN'] %>';

  var map = new mapboxgl.Map({
    container: 'map',
    style: 'mapbox://styles/mapbox/streets-v11',
    center: [10.015301, 53.554045],
    zoom: 3,
  });

  map.addControl(new mapboxgl.NavigationControl());
  map.scrollZoom.disable();

  <% if @accounts.any? %>
    map.fitBounds(<%= @bounds %>);

    <% @accounts.each do |account| %>
      var popup = new mapboxgl.Popup({ offset: 25 })
        .setHTML(
          '<%= link_to account.mosque, prefix_link_with_account_domain(account), target: '_blank' %>' +
          '<br>' +
          '<%= account.decorate.display_address_short %>'
        );

      new mapboxgl.Marker()
        .setLngLat([<%= account.address.longitude %>, <%= account.address.latitude %>])
        .setPopup(popup)
        .addTo(map);
    <% end %>
  <% end %>
</script>
