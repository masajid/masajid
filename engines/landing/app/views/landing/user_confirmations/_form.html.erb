<%= form_for(resource, as: resource_name, url: resend_confirmation_path, html: { method: :post }) do |f| %>
  <%= render 'landing/shared/devise_error_messages', resource: resource %>

  <div class='form-label-group'>
    <%= f.email_field(
      :email,
      value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
      autofocus: true,
      required: true,
      autocomplete: 'email',
      placeholder: Content::User.human_attribute_name(:email),
      class: 'form-control'
    ) %>
    <%= f.label :email, Content::User.human_attribute_name(:email) %>
  </div>

  <%= f.submit t('devise.confirmations.new.resend_confirmation_instructions'), class: 'btn btn-block' %>

  <%= render 'landing/shared/devise_links' %>
<% end %>
