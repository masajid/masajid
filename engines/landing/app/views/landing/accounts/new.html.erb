<h1 class='form-header'>
  <%= t('landing.create_account') %>
</h1>

<%= simple_form_for @account do |f| %>
  <%= f.error_notification %>

  <%= f.input :subdomain, wrapper: :input_group, prepend: protocol, append: ".#{ENV['PROJECT_HOSTNAME']}" %>

  <%= f.input :email, input_html: { autocomplete: 'email' } %>

  <%= f.input :responsable %>

  <%= f.input :mosque %>

  <%= f.simple_fields_for :address do |address| %>
    <%= address.input :phone %>

    <div class='row'>
      <div class='col-sm-9'>
        <%= address.input :address1 %>
      </div>

      <div class='col-sm-3'>
        <%= address.input :zip_code %>
      </div>
    </div>

    <div class='row'>
      <div class='col-sm-4'>
        <%= address.input :city_name %>
      </div>

      <div class='col-sm-4'>
        <%= address.input :region_name %>
      </div>

      <div class='col-sm-4'>
        <%= address.input :country_id, collection: Content::Country.all, label_method: :name, value_method: :id %>
      </div>
    </div>
  <% end %>

  <%= f.button :submit, class: 'btn-primary btn-block' %>
<% end %>
