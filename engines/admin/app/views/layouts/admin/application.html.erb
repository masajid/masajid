<!DOCTYPE html>
<html lang='<%= lang %>' dir='<%= dir %>'>
  <head>
    <title><%= title %></title>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no'>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    "admin/#{stylesheet}", media: 'all' %>
    <%= javascript_include_tag 'admin/application' %>

    <%= render 'content/shared/google_tag_manager_script_tag' if render_google_tag_manager? %>
  </head>
  <body>
    <%= render 'content/shared/google_tag_manager_noscript_tag' if render_google_tag_manager? %>

    <div class='wrapper'>
      <%= render 'admin/shared/navigation' %>

      <div id='content'>
        <%= render 'admin/shared/header' %>
        <%= render 'content/shared/flash_messages' %>

        <% if content_for?(:page_title)%>
          <div class='page-header'>
            <h1><%= yield :page_title %></h1>

            <div class='pull-right'>
              <%= yield :page_actions %>
            </div>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
