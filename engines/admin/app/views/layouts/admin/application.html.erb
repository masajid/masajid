<!DOCTYPE html>
<html lang='<%= lang %>' dir='<%= dir %>'>
  <head>
    <title><%= title %></title>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no'>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    "admin/#{stylesheet}", media: 'all' %>
    <%= javascript_include_tag 'admin/application' %>

    <%= render 'content/shared/google_tag_manager_script_tag' if render_google_tag_manager? %>
  </head>
  <body>
    <%= render 'content/shared/google_tag_manager_noscript_tag' if render_google_tag_manager? %>

    <div class='wrapper'>
      <%= render 'admin/shared/navigation' %>

      <div id='content'>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <button type="button" id="sidebarCollapse" class="btn btn-info">
              <i class="fa fa-align-left"></i>
              <span>Toggle Sidebar</span>
            </button>
          </div>


        </nav>

        <h1 class='h2'>
          <%= yield :page_title %>
        </h1>

        <div class='pull-right'>
          <%= yield :page_actions %>
        </div>

        <%= render 'content/shared/flash_messages' %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
