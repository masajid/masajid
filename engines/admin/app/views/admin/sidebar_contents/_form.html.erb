<%= simple_form_for sidebar_content, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>

  <%= form_group_for f, :body do %>
    <%= f.input :body, as: :text, label: false, input_html: { rows: 5 }, wrapper: :vertical_form %>
    <%== sidebar_content.body if sidebar_content.persisted? %>
  <% end %>

  <%= form_group_for f, :light_background do %>
    <%= f.input :light_background, label: false %>
  <% end %>

  <%= form_group_for f, :active do %>
    <%= f.input :active, label: false %>
  <% end %>

  <%= f.button :submit, class: 'btn btn-info pull-right' %>
<% end %>
