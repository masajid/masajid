<% content_for :page_title do %>
  <%= link_to @article.title, prefix_link_with_account_domain(current_account, "/article/#{@article.slug}"), target: '_blank' %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to translations_path(resource: :articles, resource_id: @article.id), class: 'btn btn-primary' do %>
    <i class='fa fa-globe'></i>
    <%= t('shared.actions.translate') %>
  <% end %>
  <%= link_to t('shared.actions.new'), new_article_path, class: 'btn btn-info' %>
  <%= link_to t('shared.actions.back_to_list'), articles_path, class: 'btn btn-secondary' %>
<% end %>

<%= render 'form', article: @article %>
