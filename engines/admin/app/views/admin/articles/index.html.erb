<% content_for :page_title do %>
  <%= plural_resource_name(Content::Article) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to t('shared.actions.new'), new_article_path, class: 'btn btn-primary btn-sm' %>
<% end %>

<p><%= t('admin.shared.total', count: @articles.count) %></p>

<div class='table-responsive'>
  <table class='table table-striped table-sm'>
    <thead>
      <tr>
        <th>#</th>
        <th><%= Content::Article.human_attribute_name(:title) %></th>
        <th><%= Content::Article.human_attribute_name(:summary) %></th>
        <th><%= Content::Article.human_attribute_name(:published_at) %></th>
        <th colspan='2'></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.id %></td>
          <td><%= article.title %></td>
          <td><%= article.summary %></td>
          <td><%= article.published_at %></td>
          <td><%= link_to t('shared.actions.edit'), edit_article_path(article), class: 'btn btn-success btn-sm' %></td>
          <td><%= link_to t('shared.actions.delete'), article, method: :delete, data: { confirm: t('admin.shared.are_you_sure') }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
