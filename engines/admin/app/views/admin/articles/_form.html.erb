<%= simple_form_for article do |f| %>
  <%= f.error_notification %>

  <div class='row'>
    <div class='col-md-6'>
      <%= f.input :title %>
      <%= f.input :slug, hint: t('simple_form.hints.content/article.slug_html') if article.persisted? %>
      <%= f.input :summary %>
      <%= f.input :video_link, hint: t('simple_form.hints.content/article.video_link_html') %>
      <%= f.input :published_at, start_year: Date.current.year - 10 %>
      <%= f.input :page_ids, as: :check_boxes, collection: options_for_pages %>

      <%= f.input :photo %>
      <%= image_tag main_app.url_for(article.photo.variant(resize: '200x')) if article.photo.attached? %>
    </div>

    <div class='col-md-6'>
      <%= render 'admin/seo_contents/form', f: f, model_name: :article %>
    </div>
  </div>

  <%= f.input :body, as: :hidden %>
  <trix-editor input='article_body'></trix-editor>

  <%= f.button :submit, class: 'btn-primary' %>
<% end %>
