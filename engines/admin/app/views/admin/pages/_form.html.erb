<%= simple_form_for page, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :ancestry, collection: policy_scope(Content::Page).roots, label_method: :pretty_name, value_method: :id %>
  <%= f.input :permalink_part, hint: page.permalink if page.persisted? %>

  <hr>

  <%= render 'admin/seo_contents/form', f: f, model_name: :page %>

  <%= f.button :submit, class: 'btn btn-info pull-right' %>
<% end %>
