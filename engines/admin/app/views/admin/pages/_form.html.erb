<%= simple_form_for page do |f| %>
  <%= f.simple_fields_for :seo_content, (f.object.seo_content || f.object.build_seo_content) do |seo_content_form| %>
    <%= f.error_notification %>

    <ul class='nav nav-tabs' id='localeTab' role='tablist'>
      <% current_account.supported_locales.reject(&:blank?).each do |locale| %>
        <li class='nav-item'>
          <a class='nav-link <%= 'active' if current_account.default_locale == locale %>' id='<%= locale %>-tab' data-toggle='tab' href='#<%= locale %>' role='tab' aria-controls='<%= locale %>' aria-selected='true'>
            <%= t("shared.locales.#{locale}") %>
          </a>
        </li>
      <% end %>
    </ul>

    <div class='tab-content' id='localeTabContent'>
      <% current_account.supported_locales.reject(&:blank?).each_with_index do |locale, index| %>
        <div class='tab-pane fade <%= 'show active' if current_account.default_locale == locale %>' id='<%= locale %>' role='tabpanel' aria-labelledby='<%= locale %>-tab'>
          <%= f.globalize_fields_for locale do |g| %>
            <div class='row'>
              <div class='col-md-6'>
                <%= g.input :name %>
                <%= g.input :description %>
                <%= f.input :ancestry, collection: policy_scope(Content::Page).roots, label_method: :pretty_name, value_method: :id %>
                <%= f.input :permalink_part, hint: page.permalink if page.persisted? %>
              </div>

              <div class='col-md-6'>
                <%= seo_content_form.globalize_fields_for locale do |g| %>
                  <%= g.input :meta_title, hint: t("simple_form.hints.content/page.meta_title_html") %>
                  <%= g.input :meta_description, hint: t("simple_form.hints.content/page.meta_description") %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%= f.button :submit, class: 'btn btn-info' %>
  <% end %>
<% end %>
