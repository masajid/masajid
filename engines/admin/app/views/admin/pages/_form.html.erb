<%= simple_form_for page do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :ancestry, collection: policy_scope(Content::Page), label_method: :pretty_name, value_method: :id %>
  <%= f.input :permalink_part, hint: page.permalink if page.persisted? %>
  <%= f.input :meta_title %>
  <%= f.input :meta_keywords %>
  <%= f.input :meta_description %>

  <%= f.button :submit, class: 'btn-primary' %>
<% end %>
