<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Subdomain</th>
      <th>Email</th>
      <th>Mosque</th>
      <th>Responsable</th>
      <th>Owner</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.subdomain %></td>
        <td><%= account.email %></td>
        <td><%= account.mosque %></td>
        <td><%= account.responsable %></td>
        <td><%= account.owner %></td>
        <td><%= account.address %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

