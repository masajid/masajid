<%= simple_form_for account do |f| %>
  <%= f.error_notification %>

  <div class='row'>
    <div class='col-sm-6'>
      <%= f.input :subdomain %>
    </div>

    <div class='col-sm-6'>
      <%= f.input :email, input_html: { autocomplete: 'email' } %>
    </div>
  </div>

  <div class='row'>
    <div class='col-sm-6'>
      <%= f.input :responsable %>
    </div>

    <div class='col-sm-6'>
      <%= f.input :mosque %>
    </div>
  </div>

  <%= f.simple_fields_for :address do |address| %>
    <%= address.input :phone %>

    <div class='row'>
      <div class='col-sm-9'>
        <%= address.input :address1 %>
      </div>

      <div class='col-sm-3'>
        <%= address.input :zip_code %>
      </div>
    </div>

    <div class='row'>
      <div class='col-sm-4'>
        <%= address.input :city_name %>
      </div>

      <div class='col-sm-4'>
        <%= address.input :region_name %>
      </div>

      <div class='col-sm-4'>
        <%= address.input :country_id, collection: Content::Country.all %>
      </div>
    </div>

    <div class='row'>
      <div class='col-sm-4'>
        <%= address.input :latitude %>
      </div>

      <div class='col-sm-4'>
        <%= address.input :longitude %>
      </div>
    </div>
  <% end %>

  <%= f.button :submit, class: 'btn-primary' %>
<% end %>
