<!DOCTYPE html>
<html lang='<%= lang %>' dir='<%= dir %>'>
  <head>
    <title><%= title %></title>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no'>
    <%== meta_data_tags %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.css' rel='stylesheet' />

    <%= stylesheet_link_tag    "public/#{stylesheet}", media: 'all' %>
    <%= javascript_include_tag 'public/application' %>

    <!-- Custom styles for this template -->
    <link href='https://fonts.googleapis.com/css?family=Playfair+Display:700,900' rel='stylesheet'>

    <%= render 'content/shared/google_tag_manager_script_tag' if render_google_tag_manager? %>
  </head>
  <body class='<%= controller_name %> <%= action_name %>'>
    <%= render 'content/shared/google_tag_manager_noscript_tag' if render_google_tag_manager? %>
    <div class='container'>
      <%= render 'public/shared/header' %>
      <%= render 'content/shared/flash_messages' %>

      <%= yield %>
    </div>

    <%= render 'public/shared/footer' %>
  </body>
</html>
