<% if @subscriber.save %>
  new Noty({
    theme: 'bootstrap-v4',
    timeout: 8000,
    type: 'success',
    layout: 'topRight',
    text: 'You subscribed successfully to our newsletter.'
  }).show();
  $('#subscriber_email').val('')
<% else %>
  new Noty({
    theme: 'bootstrap-v4',
    timeout: 8000,
    type: 'error',
    layout: 'topRight',
    text: '<%= @subscriber.errors.messages.values.flatten.join(', ') %>'
  }).show();
<% end %>
