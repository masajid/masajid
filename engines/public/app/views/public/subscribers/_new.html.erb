<div class='modal fade' id='newsletterModalCenter' tabindex='-1' role='dialog' aria-labelledby='newsletterModalCenterTitle' aria-hidden='true'>
  <div class='modal-dialog modal-dialog-centered modal-sm' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Subscribe to newletters</h5>
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        <%= simple_form_for Content::Subscriber.new, remote: true do |f| %>
          <div id='subscriber_alert'></div>
          <%= f.input :email, placeholder: 'Email Address', label: false %>
          <%= f.button :submit, label: 'Subscribe', class: 'btn btn-sm btn-block btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
