<main role='main' class='contact-us'>
  <div class='row'>
    <div class='col-md-6'>
      <div id='map'></div>
      <script>
        mapboxgl.accessToken = '<%= ENV['MAPBOX_ACCESS_TOKEN'] %>';
        var map = new mapboxgl.Map({
          container: 'map',
          style: 'mapbox://styles/mapbox/streets-v9',
          center: <%= current_account.decorate.coordinates %>,
          zoom: 14
        });

        map.addControl(new mapboxgl.NavigationControl());
        map.scrollZoom.disable();

        new mapboxgl.Marker()
          .setLngLat(<%= current_account.decorate.coordinates %>)
          .addTo(map);
      </script>
    </div>

    <div class='col-md-6'>
      <%= render 'public/shared/address' %>

      <%= simple_form_for Content::Subscriber.new, remote: true do |f| %>
        <div class='row'>
          <div class='col-md-6'>
            <%= f.input :email, label: false, placeholder: 'Name' %>
          </div>
          <div class='col-md-6'>
            <%= f.input :email, label: false, placeholder: 'Phone' %>
          </div>
        </div>
        <%= f.input :email, label: false, placeholder: 'Email' %>
        <%= f.input :email, label: false, placeholder: 'Message' %>

        <%= f.button :submit, t('public.home.contact_us.cta_text'), class: 'btn btn-md btn-primary' %>
      <% end %>
    </div>
  </div>
</main>
