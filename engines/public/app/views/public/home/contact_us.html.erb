<main role='main' class='contact-us'>
  <div class='row'>
    <div class='col-md-6'>
      <div id='map'></div>
      <script>
        mapboxgl.accessToken = '<%= ENV['MAPBOX_ACCESS_TOKEN'] %>';
        var map = new mapboxgl.Map({
          container: 'map',
          style: 'mapbox://styles/mapbox/streets-v9',
          center: <%= current_account.decorate.coordinates %>,
          zoom: 14
        });

        map.addControl(new mapboxgl.NavigationControl());
        map.scrollZoom.disable();

        new mapboxgl.Marker()
          .setLngLat(<%= current_account.decorate.coordinates %>)
          .addTo(map);
      </script>
    </div>

    <div class='col-md-6'>
      <%= render 'public/shared/address' %>
      <%= render 'public/messages/new' %>
    </div>
  </div>
</main>
